<UserControl
    x:Class="RayvarzInstaller.ModernUI.App.Pages.Introduction"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mui="http://RayvarzInstallersoftware.com/ModernUI"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,8"
                    Style="{StaticResource Heading1}"
                    Text="نصاب بسته های نرم افزاری رایورز"
                    TextAlignment="Right" />
                <mui:BBCodeBlock
                    Margin="0,0,0,32"
                    BBCode="به نصاب رایورز خوش آمدید"
                    TextAlignment="Right" />
                <TextBlock
                    Style="{StaticResource Heading2}"
                    Text="لاگین یکپارچه رایورز"
                    TextAlignment="Right" />


            </StackPanel>



        </ScrollViewer>
        <StackPanel Grid.Row="1">

            <mui:ModernButton
                Command="mui:LinkCommands.NavigateLink"
                CommandParameter="/Pages/PathView.xaml"
                CommandTarget="{Binding ElementName=Frame}"
                Content="مرحله بعدی"
                IconData="F1 M 57,42L 57,34L 32.25,34L 42.25,24L 31.75,24L 17.75,38L 31.75,52L 42.25,52L 32.25,42L 57,42 Z" />
        </StackPanel>
    </Grid>
</UserControl>
